{% extends 'base.html.twig' %}

{% block title %}
    {{ program.title }} - Saison {{ season.number }}
{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{asset(program.poster)}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Série {{ program.title }}</h1>
        </div>
    </div>

    <h2>Épisodes</h2>
    <ul>
        
            <li>
                <strong>Épisode {{ episode.number }} - {{ episode.title }}</strong><br>
                {{ episode.synopsis }}
            </li>
        
    </ul>

    <div>
<h3>commentaire</h3>
{% for comment in episode.comments %}
<p>{{ comment.comment }}</p>
<p>Note : {{ comment.rate }}
{# <p>{{ comment.author }}</p> #}
{% endfor %}
</div>
    <div>
		{% if app.user %}
			<a href="{{ path('app_comment_new') }}">
				Ajouter un commentaire</a>
		{% else %}
			<a href="{{ path('app_login') }}">
				Se connecter pour commenter</a>
		{% endif %}
	</div>

    <a href="{{ path('program_show', {'slug': program.slug}) }}">
        Retour à la série
    </a>
{% endblock %}